# Neurosonancy - Configuracoes de Ambiente

# ElevenLabs API (Voice Trainer)
ELEVENLABS_API_KEY=your_api_key_here
ELEVENLABS_VOICE_ID=your_voice_id_here
ELEVENLABS_MODEL_ID=eleven_multilingual_v2

# Audio Settings
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_DEVICE_ID=

# VAD Settings
VAD_SILENCE_DURATION=2.0
VAD_ENERGY_THRESHOLD=300

# Whisper Settings
WHISPER_MODEL_SIZE=base
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8

# Training Settings
TRAINING_EPOCHS=100
TRAINING_LR=0.0001
TRAINING_MIN_SAMPLES=3
TRAINING_TARGET_SAMPLES=10

# TTS Engine (coqui ou elevenlabs)
TTS_ENGINE=coqui
COQUI_MODEL_NAME=tts_models/multilingual/multi-dataset/xtts_v2
COQUI_DEVICE=cuda
