# ============================================
# CONFIGURAÇÕES DO SISTEMA DE TRANSCRIÇÃO
# ============================================

# ------------------------------------------
# MODELO DE TRANSCRIÇÃO
# ------------------------------------------
# Opções: whisper, vosk, wav2vec
TRANSCRIPTION_MODEL=whisper

# Tamanho do modelo Whisper (tiny, base, small, medium, large)
WHISPER_MODEL_SIZE=base

# ------------------------------------------
# CONFIGURAÇÕES DE ÁUDIO
# ------------------------------------------
AUDIO_SAMPLE_RATE=44100
AUDIO_DEVICE_ID=10
AUDIO_CHANNELS=1
AUDIO_CHUNK_SIZE=1024

# ------------------------------------------
# VAD (Voice Activity Detection)
# ------------------------------------------
# Tempo de silêncio para considerar fim de fala (em segundos)
VAD_SILENCE_DURATION=1.0

# Threshold de energia para detecção de voz (50-3000)
VAD_ENERGY_THRESHOLD=300

# Estratégia de VAD: energy, webrtc, silero
VAD_STRATEGY=webrtc

# ------------------------------------------
# PERFORMANCE E GPU
# ------------------------------------------
USE_GPU=true
GPU_DEVICE=0

# Modo de latência: low, balanced, high_precision
LATENCY_MODE=balanced

# Compute type para Whisper: float16, int8, float32
WHISPER_COMPUTE_TYPE=float16

# ------------------------------------------
# ARMAZENAMENTO
# ------------------------------------------
SAVE_AUDIO=true
SAVE_TRANSCRIPTIONS=true
DATABASE_PATH=./data/transcriptions.db
AUDIO_STORAGE_PATH=./data/audio/

# Manter áudios por quantos dias (0 = infinito)
AUDIO_RETENTION_DAYS=30

# ------------------------------------------
# VISUALIZAÇÃO
# ------------------------------------------
ENABLE_VISUALIZATION=true

# Modo de visualização: gui, terminal, none
VISUALIZATION_MODE=gui

# FPS da visualização
VISUALIZATION_FPS=30

# ------------------------------------------
# LOGGING
# ------------------------------------------
# Nível: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG

LOG_FILE=./logs/transcription.log

# Rotação de logs (tamanho máximo em MB)
LOG_MAX_SIZE_MB=10

# Número de arquivos de backup
LOG_BACKUP_COUNT=5

# ------------------------------------------
# ADVANCED
# ------------------------------------------
# Buffer de áudio (em segundos)
AUDIO_BUFFER_DURATION=10.0

# Timeout para processamento (segundos)
PROCESSING_TIMEOUT=30.0
